<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.dao.AddressDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="io.renren.entity.AddressEntity" id="addressMap">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="province" column="province"/>
        <result property="city" column="city"/>
        <result property="district" column="district"/>
        <result property="address" column="address"/>
        <result property="contract" column="contract"/>
        <result property="phone" column="phone"/>
        <result property="defaultflag" column="defaultFlag"/>
    </resultMap>

    <update id="cleanDefault">
        update tb_address set defaultFlag = 0 where user_id=#{userid} and defaultFlag = 1
    </update>


</mapper>